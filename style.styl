@import "bower_components/taco/taco.styl"

generateGrid(columns: 5, floats: false)

@media (max-width: 768px)
  genereteWidths(columns: 5, name: lap-grid-item, hidden: "hidden-")

body
  font-family: 'Raleway', sans-serif
  background-color: #111
  color: white
  max-width: 960px
  margin: 1em auto

  @media (max-width: 960px)
    max-width: none
    margin: 1em

pre
  border-left: 1px solid rgba(144, 238, 144, 0.2)
  border-bottom: 1px solid rgba(144, 238, 144, 0.2)
  padding: 1em
  color: rgba(144, 238, 144, 0.5)

code
  color: rgba(144, 238, 144, 0.5)

a
  color: lightgreen

a:visted
  color: lightgreen

section
  margin-top: 3.5em

dt
  color: lightgreen

dt:before
  content: ""

h1
  font-size: 4em
  font-family: 'Montserrat', sans-serif
  font-weight: 700
  line-height: 1em
  text-transform: uppercase
  margin-top: 0
  color: white

h1:first-letter
  color: lightgreen

h1 + p
  color: lightgreen

h2
  font-size: 1.5em
  font-family: 'Montserrat', sans-serif
  font-weight: 700
  line-height: 1em
  margin-top: 0
  color: white

.nav
  &.-inline
    display: none

    @media (max-width: 350px)
      display: block

.link-heading
  text-decoration: none

.link-heading:hover
  text-decoration: none

.link-heading:hover h2:after
  content: "#"
  margin-left: 2px

.params-list ul
  padding-left: 0

.params-list p
  margin-top: 0

.params-list span
  color: lightgreen

